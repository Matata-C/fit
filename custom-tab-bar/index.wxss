.tabbar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 54px;
  background: #fff;
  box-shadow: 0 -2px 12px rgba(255, 214, 0, 0.08);
  border-top: 1px solid #f5f5f5;
}
.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2px 0 0 0;
  color: #888;
  font-size: 14px;
  transition: color 0.2s;
}
.tabbar-icon {
  width: 20px;
  height: 20px;
  margin-bottom: 1px;
  filter: brightness(0) saturate(100%) sepia(100%) hue-rotate(45deg) brightness(1.2);
}
.tabbar-text {
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.5px;
}
.tabbar-item-selected {
  color: #FFD600;
}
.tabbar-item-selected .tabbar-text {
  color: #FFD600;
}
.tabbar-item-selected .tabbar-icon {
  filter: brightness(0) saturate(100%) sepia(100%) hue-rotate(45deg) brightness(1.8);
} 